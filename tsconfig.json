{
  "compilerOptions": {
    "baseUrl": "src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES2021",                         // ✅ updated
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES2021"                                  // ✅ simplified
    ],
    "paths": {
      "@base/*": ["./*"],
      "@networking/*": ["networking/*"],
      "@views/*": ["views/*"],
      "@factories/*": ["factories/*"],
      "@stores/*": ["stores/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@extensions/*": ["extensions/*"],
      "@images/*": ["images/*"]
    }
  },
  "include": [
    "**/*.ts"
  ]
}
